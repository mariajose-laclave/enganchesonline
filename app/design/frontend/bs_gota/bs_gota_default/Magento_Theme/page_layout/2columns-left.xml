<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns">
		<container name="col.left.sidebar" label="Col Left Sidebar" htmlTag="div" htmlClass="col-md-3"> 
			<container name="col.sidebar" label="Col Sidebar" htmlTag="div" htmlClass="col-sidebar">
				<container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main" after="main">
					<container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
				</container>
				<container name="div.sidebar.additional" htmlTag="div" htmlClass="sidebar sidebar-additional hidden-sm hidden-xs" after="div.sidebar.main">
					<container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
				</container>
			</container>
		</container>
    </referenceContainer>
</layout>
